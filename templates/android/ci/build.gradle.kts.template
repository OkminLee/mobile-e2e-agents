plugins {
    // ... your existing plugins
}

android {
    // ... your existing android configuration

    defaultConfig {
        // Test configuration
        testInstrumentationRunner = "androidx.test.runner.AndroidJUnitRunner"

        // Test orchestrator for test isolation
        testInstrumentationRunnerArguments["clearPackageData"] = "true"

        // Custom test runner arguments (optional)
        // testInstrumentationRunnerArguments["annotation"] = "com.example.LargeTest"
    }

    testOptions {
        // Use Android Test Orchestrator for better isolation
        execution = "ANDROIDX_TEST_ORCHESTRATOR"

        // Disable animations during tests
        animationsDisabled = true

        // Unit test configuration
        unitTests {
            isIncludeAndroidResources = true
            isReturnDefaultValues = true
        }

        // Managed devices for consistent testing (optional)
        managedDevices {
            localDevices {
                create("pixel6Api33") {
                    device = "Pixel 6"
                    apiLevel = 33
                    systemImageSource = "google"
                }
                create("pixel6Api30") {
                    device = "Pixel 6"
                    apiLevel = 30
                    systemImageSource = "google"
                }
            }
            groups {
                create("phoneDevices") {
                    targetDevices.add(devices["pixel6Api30"])
                    targetDevices.add(devices["pixel6Api33"])
                }
            }
        }
    }

    // Test build type configuration
    buildTypes {
        debug {
            // Enable test coverage (optional)
            enableUnitTestCoverage = true
            enableAndroidTestCoverage = true
        }
    }
}

dependencies {
    // ============================================================
    // Espresso - View-based UI Testing
    // ============================================================
    androidTestImplementation("androidx.test.espresso:espresso-core:3.5.1")
    androidTestImplementation("androidx.test.espresso:espresso-contrib:3.5.1") {
        // Exclude support library conflicts if needed
        exclude(group = "org.checkerframework", module = "checker")
    }
    androidTestImplementation("androidx.test.espresso:espresso-intents:3.5.1")
    androidTestImplementation("androidx.test.espresso:espresso-accessibility:3.5.1")

    // Idling Resources for async operations
    androidTestImplementation("androidx.test.espresso:espresso-idling-resource:3.5.1")
    // For OkHttp idling resource (if using OkHttp)
    // androidTestImplementation("com.jakewharton.espresso:okhttp3-idling-resource:1.0.0")

    // ============================================================
    // UI Automator - System/Cross-app Testing
    // ============================================================
    androidTestImplementation("androidx.test.uiautomator:uiautomator:2.3.0")

    // ============================================================
    // Compose Testing (if using Jetpack Compose)
    // ============================================================
    // Get the Compose BOM version from your project
    val composeBom = platform("androidx.compose:compose-bom:{{COMPOSE_BOM_VERSION}}")
    androidTestImplementation(composeBom)

    androidTestImplementation("androidx.compose.ui:ui-test-junit4")
    debugImplementation("androidx.compose.ui:ui-test-manifest")

    // ============================================================
    // AndroidX Test
    // ============================================================
    androidTestImplementation("androidx.test:runner:1.5.2")
    androidTestImplementation("androidx.test:rules:1.5.0")
    androidTestImplementation("androidx.test.ext:junit:1.1.5")
    androidTestImplementation("androidx.test.ext:junit-ktx:1.1.5")

    // Fragment testing (if testing fragments)
    debugImplementation("androidx.fragment:fragment-testing:1.6.2")

    // ============================================================
    // Test Orchestrator
    // ============================================================
    androidTestUtil("androidx.test:orchestrator:1.4.2")

    // ============================================================
    // Assertions
    // ============================================================
    androidTestImplementation("com.google.truth:truth:1.1.5")
    androidTestImplementation("org.hamcrest:hamcrest:2.2")

    // ============================================================
    // Coroutines Testing (if using coroutines)
    // ============================================================
    androidTestImplementation("org.jetbrains.kotlinx:kotlinx-coroutines-test:1.7.3")

    // ============================================================
    // Hilt Testing (if using Hilt)
    // ============================================================
    // androidTestImplementation("com.google.dagger:hilt-android-testing:2.48")
    // kaptAndroidTest("com.google.dagger:hilt-android-compiler:2.48")
}

// ============================================================
// Custom Test Tasks
// ============================================================

// Run E2E tests only
tasks.register("runE2ETests") {
    dependsOn("connectedDebugAndroidTest")
    description = "Run E2E UI tests on connected device/emulator"
    group = "verification"
}

// Run tests on managed devices
tasks.register("runManagedDeviceTests") {
    dependsOn("phoneDevicesDebugAndroidTest")
    description = "Run UI tests on Gradle Managed Devices"
    group = "verification"
}

// Clean test results
tasks.register<Delete>("cleanTestResults") {
    delete(
        fileTree("build/reports/androidTests"),
        fileTree("build/outputs/androidTest-results")
    )
    description = "Clean test result directories"
    group = "verification"
}
